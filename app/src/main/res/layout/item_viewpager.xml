        android:scaleType="centerInside"
        android:paddingTop="50dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingBottom="40sp"
        android:background="@drawable/shape_rounded_item"
        />

</LinearLayout>